(0,0,0)--(0,1.2,0)--(0,1.2,1.2)--(0,0,1.2)-- cycle;
\draw[thin,-&gt;] (0,0,0) -- (1.7,0,0) node[anchor=north east]{$x$};
\draw[thin,-&gt;] (0,0,0) -- (0,1.2,0) node[anchor=north west]{$y$};
